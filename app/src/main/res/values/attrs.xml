<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MainNavigateTabBar">
        <attr name="navigateTabTextColor" format="color|reference"/>
        <attr name="navigateTabSelectedTextColor" format="color|reference"/>
        <attr name="containerId" format="integer|reference"/>
        <attr name="navigateTabTextSize" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ExpandPopTabView">
        <attr name="tab_toggle_btn_bg" format="reference"></attr>
        <attr name="tab_toggle_btn_color" format="color"></attr>
        <attr name="tab_toggle_btn_font_color" format="color"></attr>
        <attr name="tab_toggle_btn_font_size" format="dimension"></attr>
        <attr name="tab_pop_bg_color" format="color"></attr>
    </declare-styleable>

    <!-- 水电工个人主页 管理页面中的item-->
    <declare-styleable name="PersonManageItemView">
        <attr name="icon" format="reference"/>
        <attr name="text1" format="string"/>
        <attr name="text2" format="string"/>
        <attr name="text3" format="string"/>
        <attr name="text4" format="string"/>
        <attr name="text5" format="string"/>
        <attr name="isMoney" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="PublishTextRowView">
        <attr name="PublishTextRowViewText" format="string"/>
        <attr name="PublishTextRowViewHiht" format="string"/>
        <attr name="PublishTextRowViewTextSize" format="dimension"/>
        <attr name="PublishTextRowViewTextColor" format="color"/>
        <attr name="PublishTextRowViewRightTextColor" format="color"/>
        <attr name="PublishTextRowViewIsBottomLineShow" format="boolean"/>
        <attr name="PublishTextRowViewIsSelect" format="boolean"/>
        <attr name="PublishTextRowViewLeftWidth" format="dimension"/>
        <attr name="PublishTextRowViewGravity" format="integer"/>
        <attr name="PublishTextRowViewState">
            <enum name="read" value="0" />
            <enum name="write" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RatingBar">
        <!--星星间距-->
        <attr format="dimension" name="starDistance"/>
        <!--星星大小-->
        <attr format="dimension" name="starSize"/>
        <!--星星个数-->
        <attr format="integer" name="starCount"/>
        <!--星星空图-->
        <attr format="reference" name="starEmpty"/>
        <!--星星满图-->
        <attr format="reference" name="starFill"/>
        <!--是否点击-->
        <attr format="boolean" name="isTouch"/>
    </declare-styleable>

    <declare-styleable name="CircularImageView">

        <!-- Whether or not to draw a circular border around the image. -->
        <attr name="civ_border" format="boolean"/>
        <!-- The color of the border draw around the image. (if enabled) -->
        <attr name="civ_borderColor" format="color"/>
        <!-- Makes the border this pixels wide. (if enabled) -->
        <attr name="civ_borderWidth" format="dimension"/>
        <!-- Whether or not to draw a selector on this view upon touch events. -->
        <attr name="civ_selector" format="boolean"/>
        <!-- The color of the selector draw on top of the image upon touch events. (if enabled) -->
        <attr name="civ_selectorColor" format="color"/>
        <!-- The color of the selector stroke drawn around the image upon touch events. Be sure to provide some opacity. (if enabled) -->
        <attr name="civ_selectorStrokeColor" format="color"/>
        <!-- The selector stroke drawn around the image upon touch events this pixels wide. (if enabled) -->
        <attr name="civ_selectorStrokeWidth" format="dimension"/>
        <!-- Whether or not to draw a shadow around your circular image. -->
        <attr name="civ_shadow" format="boolean"/>
        <!-- The radius for the shadow to extend to. (if enabled) -->
        <attr name="civ_shadowRadius" format="float"/>
        <!-- Horizontal shadow offset. (if enabled) -->
        <attr name="civ_shadowDx" format="float"/>
        <!-- Vertical shadow offset. (if enabled) -->
        <attr name="civ_shadowDy" format="float"/>
        <!-- The color of the shadow drawn around your circular image. (if enabled) -->
        <attr name="civ_shadowColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="CircularImageViewStyle">
        <attr name="circularImageViewDefault" format="reference"/>
    </declare-styleable>
</resources>