<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/activity_page_top"/>

        <LinearLayout style="@style/my_text_layout">

            <TextView
                style="@style/my_text_style"
                android:layout_height="wrap_content"
                android:text="起始时间"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/date_select_begin"
                style="@style/my_right_text_style1"
                android:hint="请选择起始时间"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color" />
        </LinearLayout>

        <View style="@style/horizontal_view" />

        <LinearLayout style="@style/my_text_layout">

            <TextView
                style="@style/my_text_style"
                android:layout_height="wrap_content"
                android:text="终止时间"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/date_select_end"
                style="@style/my_right_text_style1"
                android:hint="请选择终止时间"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color" />
        </LinearLayout>

        <View style="@style/horizontal_view" />
    </LinearLayout>
    <Button
        android:id="@+id/finish_bth"
        style="@style/style_next_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_bg_blue"
        android:text="确认" />
</RelativeLayout>
