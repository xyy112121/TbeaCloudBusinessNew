<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_page_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/head_color"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_my_relaname_verified" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="你已通过实名认证"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout style="@style/my_text_layout">

        <TextView
            style="@style/my_text_style"
            android:text="企业名称" />

        <TextView
            style="@style/my_right_text_style1"
            android:gravity="right|center_vertical"
            android:text="绵阳城五金机电经营部" />
    </LinearLayout>

    <View style="@style/horizontal_view" />

    <LinearLayout style="@style/my_text_layout">

        <TextView
            style="@style/my_text_style"
            android:text="注册号" />

        <TextView
            style="@style/my_right_text_style1"
            android:gravity="right|center_vertical"
            android:text="5***************8" />
    </LinearLayout>

    <View style="@style/horizontal_view" />

    <LinearLayout style="@style/my_text_layout">

        <TextView
            style="@style/my_text_style"
            android:text="注册地址" />

        <TextView
            style="@style/my_right_text_style1"
            android:gravity="right|center_vertical"
            android:text="绵阳城五金机电经营部地址" />
    </LinearLayout>

    <View
        style="@style/horizontal_view"
        android:layout_height="10dp"
        android:background="@color/interval_color" />

    <LinearLayout style="@style/my_text_layout">

        <TextView
            style="@style/my_text_style"
            android:text="法人姓名" />

        <TextView
            style="@style/my_right_text_style1"
            android:gravity="right|center_vertical"
            android:text="张明" />
    </LinearLayout>

    <View style="@style/horizontal_view" />

    <LinearLayout style="@style/my_text_layout">

        <TextView
            style="@style/my_text_style"
            android:text="身份证号" />

        <TextView
            style="@style/my_right_text_style1"
            android:gravity="right|center_vertical"
            android:text="5**************5" />
    </LinearLayout>

    <View
        style="@style/horizontal_view"
        android:layout_height="10dp"
        android:background="@color/interval_color" />

    <LinearLayout style="@style/my_text_layout">

        <TextView
            style="@style/my_text_style"
            android:text="证件审核" />

        <TextView
            style="@style/my_right_text_style"
            android:gravity="right|center_vertical"
            android:text="已通过" />
    </LinearLayout>

    <View style="@style/horizontal_view" />

</LinearLayout>