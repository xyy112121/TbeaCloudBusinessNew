<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/activity_page_top" />

        <com.example.programmer.tbeacloudbusiness.component.PublishTextRowView
            android:id="@+id/signin_code_meeting_code"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            app:PublishTextRowViewIsBottomLineShow="true"
            app:PublishTextRowViewLeftWidth="90dp"
            app:PublishTextRowViewRightTextColor="@color/tab_text_normal"
            app:PublishTextRowViewState="read"
            app:PublishTextRowViewText="会议编号"
            app:PublishTextRowViewTextColor="@color/text_color" />

        <com.example.programmer.tbeacloudbusiness.component.PublishTextRowView
            android:id="@+id/signin_code_time"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            app:PublishTextRowViewIsBottomLineShow="true"
            app:PublishTextRowViewLeftWidth="90dp"
            app:PublishTextRowViewRightTextColor="@color/tab_text_normal"
            app:PublishTextRowViewState="read"
            app:PublishTextRowViewText="举办时间"
            app:PublishTextRowViewTextColor="@color/text_color" />

        <com.example.programmer.tbeacloudbusiness.component.PublishTextRowView
            android:id="@+id/signin_code_addr"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            app:PublishTextRowViewIsBottomLineShow="true"
            app:PublishTextRowViewLeftWidth="90dp"
            app:PublishTextRowViewRightTextColor="@color/tab_text_normal"
            app:PublishTextRowViewState="read"
            app:PublishTextRowViewText="举办地点"
            app:PublishTextRowViewTextColor="@color/text_color" />

        <ImageView
            android:id="@+id/signin_code_picture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_defult" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="1.请使用电工惠APP扫码签到。"
                android:textColor="#C1C1C1"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="2.会议签到仅限水电工程师使用。"
                android:textColor="#C1C1C1"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="3.签到码有限期为会议开始前2小时到会议结束。"
                android:textColor="#C1C1C1"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>