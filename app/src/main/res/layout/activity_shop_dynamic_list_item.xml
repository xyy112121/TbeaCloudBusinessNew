<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center_vertical">

        <CheckBox
            android:id="@+id/shop_dynamic_add_list_item_ck"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/addr_is_defult_ck"
            android:button="@null"
            android:layout_marginLeft="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/shop_dynamic_item_thumbpicture"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_defult" />

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp">

                <TextView
                    android:id="@+id/shop_dynamic_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="测试测试"
                    android:textColor="@color/tab_text_normal"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/shop_dynamic_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="2015-01-02 06:00:00"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>


</FrameLayout>