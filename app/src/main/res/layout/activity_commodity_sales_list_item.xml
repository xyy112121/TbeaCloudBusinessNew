<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/market_info_thumbpicture"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/icon_defult" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="8dp">

                <TextView
                    android:id="@+id/market_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="商品名称"
                    android:textColor="@color/tab_text_normal"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/market_info_publishtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/market_info_name"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="发布时间"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/commodity_sales_list_SaleNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.2"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="33"
        android:textColor="@color/tab_text_normal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <TextView
            style="@style/money_logo_style"
            android:textColor="@color/red"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/commodity_sales_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="112"
            android:textColor="@color/red"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/person_info_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/icon_arrow_right" />

</LinearLayout>