<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/my_select_btn"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/my_item_imgae"
            style="@style/my_item_image"
            android:src="@drawable/icon_my_distribution" />

        <TextView
            android:id="@+id/my_item_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="分销系统"
            android:textColor="@color/tab_text_normal"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/my_item_right_text"
            style="@style/my_right_text_style"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:text="12"/>
    </LinearLayout>

    <View
        style="@style/horizontal_view"
        android:background="@color/interval_color"
        />
</LinearLayout>