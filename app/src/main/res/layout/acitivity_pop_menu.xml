<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="match_parent"
    android:background="@drawable/icon_rectangle"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/menu1"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/menu1_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/icon_tbea_message" />

        <TextView
            android:id="@+id/menu1_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="消息"
            android:textColor="@color/text_color1" />
    </LinearLayout>

    <View style="@style/horizontal_view" />

    <LinearLayout
        android:id="@+id/menu2"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:gravity="center"

        >

        <ImageView
            android:id="@+id/menu2_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/icon_tbea_home" />

        <TextView
            android:id="@+id/menu2_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/text_color1" />
    </LinearLayout>

    <View
        android:id="@+id/menu3_view"
        style="@style/horizontal_view"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/menu3"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/menu3_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/icon_share" />

        <TextView
            android:id="@+id/menu3_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="分享"
            android:textColor="@color/text_color1" />
    </LinearLayout>

    <View
        android:id="@+id/menu4_view"
        style="@style/horizontal_view"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/menu4"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/menu4_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/icon_code" />

        <TextView
            android:id="@+id/menu4_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="签到码"
            android:textColor="@color/text_color1" />
    </LinearLayout>
</LinearLayout>