<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:orientation="vertical"
        android:background="@drawable/picket_information_background"
        android:layout_marginLeft="35dp">
        <TextView
            android:id="@+id/picker_header_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_user_location_gray"
            android:drawablePadding="5dp"
            android:textColor="@color/black"
           android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/picker_header_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_user_close"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:layout_marginRight="8dp"/>

    </RelativeLayout>
    <View
       style="@style/horizontal_view"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_height="0.4dp"/>

</LinearLayout>