<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/activity_page_top" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:background="@color/head_color"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="个人资料"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout style="@style/my_text_layout">

            <TextView
                style="@style/my_text_style"
                android:layout_height="wrap_content"
                android:text="姓名" />

            <TextView
                android:id="@+id/plumber_info_name"
                style="@style/my_right_text_style1"
                />
        </LinearLayout>

        <View style="@style/horizontal_view" />

        <LinearLayout style="@style/my_text_layout">

            <TextView
                style="@style/my_text_style"
                android:layout_height="wrap_content"
                android:text="性别" />

            <TextView
                android:id="@+id/plumber_info_sex"
                style="@style/my_right_text_style1"
                />
        </LinearLayout>

        <View style="@style/horizontal_view" />

        <LinearLayout style="@style/my_text_layout">

            <TextView
                style="@style/my_text_style"
                android:layout_height="wrap_content"
                android:text="年龄" />

            <TextView
                android:id="@+id/plumber_info_age"
                style="@style/my_right_text_style1"
                android:textStyle="bold"/>
        </LinearLayout>
        <View style="@style/horizontal_view" />

        <LinearLayout style="@style/my_text_layout">

            <TextView
                style="@style/my_text_style"
                android:layout_height="wrap_content"
                android:text="工龄" />

            <TextView
                android:id="@+id/plumber_info_workAge"
                style="@style/my_right_text_style1"
                android:textStyle="bold"/>
        </LinearLayout>



        <View style="@style/horizontal_view" />

        <LinearLayout style="@style/my_text_layout">

            <TextView
                style="@style/my_text_style"
                android:layout_height="wrap_content"
                android:text="所在地区" />

            <TextView
                android:id="@+id/plumber_info_area"
                style="@style/my_right_text_style1"
                android:textStyle="bold"/>
        </LinearLayout>



        <View style="@style/horizontal_view" />

        <LinearLayout style="@style/my_text_layout">

            <TextView
                style="@style/my_text_style"
                android:layout_height="wrap_content"
                android:text="认证状态" />

            <TextView
                android:id="@+id/plumber_info_whetheridentify"
                style="@style/my_right_text_style"
                android:gravity="right|center"
                />
        </LinearLayout>

        <View style="@style/horizontal_view" />

        <LinearLayout style="@style/my_text_layout">

            <TextView
                style="@style/my_text_style"
                android:layout_height="wrap_content"
                android:text="个人介绍" />

            <TextView
                android:id="@+id/plumber_info_intro"
                style="@style/my_right_text_style1"
                android:maxLines="20"
                />
        </LinearLayout>
        <View style="@style/horizontal_view" />
    </LinearLayout>


</RelativeLayout>