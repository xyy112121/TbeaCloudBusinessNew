<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/shop_dynamic_add_list_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:maxHeight="218dp"
            android:maxWidth="218dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_take_photos" />

        <ImageView
            android:id="@+id/shop_dynamic_add_list_item_image_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:src="@drawable/icon_image_delete" />

    </RelativeLayout>
</FrameLayout>