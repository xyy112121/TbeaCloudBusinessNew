<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/activity_page_top" />

        <WebView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_defult" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/operation_laout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:visibility="gone">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="换样式"
            android:drawableTop="@drawable/icon_tbea1"
            android:gravity="center"
            android:drawablePadding="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="分享"
            android:drawableTop="@drawable/icon_tbea1"
            android:gravity="center"
            android:drawablePadding="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="本地保存"
            android:drawableTop="@drawable/icon_tbea1"
            android:gravity="center"
            android:drawablePadding="5dp"/>

    </LinearLayout>

    <View
         android:layout_above="@id/operation_laout"

        style="@style/horizontal_view"/>
</RelativeLayout>