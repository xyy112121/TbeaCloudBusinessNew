<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/activity_page_top" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/icon_userdone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="注册成功"
            android:textColor="@color/tab_text_normal" />

        <View
            style="@style/horizontal_view"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/icon_useralert"
            android:drawablePadding="8dp"
            android:text="提示"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:text="为建设诚信商业平台，商家需补全资料并进行实名认证才可以使用系统完整功能。"
            android:textColor="@color/text_color" />

    </LinearLayout>


    <Button
        android:id="@+id/completion_finish"
        style="@style/style_next_btn"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_bg_blue"
        android:text="完成"/>

    <Button
        android:id="@+id/completion_data"
        style="@style/style_next_btn"
        android:text="前往补全资料"
        android:layout_above="@id/completion_finish"
        android:background="@drawable/btn_bg_green"

        />
</RelativeLayout>