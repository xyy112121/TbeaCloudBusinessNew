<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_color">
        <include layout="@layout/activity_page_top"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="为了保证您的帐号安全，更改绑定手机号前请先进行安全验证"
            android:textColor="@color/text_color"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textSize="13sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="10dp">

            <LinearLayout
                style="@style/my_text_layout"
                android:layout_marginRight="5dp">
                <TextView
                    style="@style/my_text_style"
                    android:text="手机号"
                    android:textColor="@color/tab_text_normal"
                    />

                <EditText
                    android:id="@+id/myphone_edit_old_phone"
                    android:layout_weight="0.8"
                    android:hint="请输入之前绑定的手机号"
                    android:inputType="phone"
                    style="@style/edit_style"
                    android:layout_marginLeft="20dp"
                    />


            </LinearLayout>
            <View
                style="@style/horizontal_view"/>
            <LinearLayout
                style="@style/my_text_layout">
                <TextView
                    style="@style/my_text_style"
                    android:text="验证码"
                    android:textColor="@color/tab_text_normal"
                    />

                <EditText
                    android:id="@+id/myphone_edit_code"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.74"
                    android:hint="请输入验证码"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    style="@style/edit_style"/>
                <Button
                    android:id="@+id/send_code"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="获取验证码"
                    android:textColor="@color/blue"
                    android:background="@null"
                    android:textSize="12sp"
                    />

            </LinearLayout>
        </LinearLayout>
        <View
            style="@style/horizontal_view"/>
        <Button
            android:id="@+id/myphone_edit_next"
            style="@style/style_next_btn"
            android:text="下一步"
            />
    </LinearLayout>
</FrameLayout>