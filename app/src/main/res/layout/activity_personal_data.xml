<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_page_top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"

                android:background="@color/head_color">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="个人资料"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout style="@style/my_text_layout">

                <TextView
                    style="@style/my_text_style"
                    android:text="用户名" />

                <TextView
                    style="@style/my_right_text_style1"
                    android:text="张明" />
            </LinearLayout>

            <View style="@style/horizontal_view" />

            <LinearLayout style="@style/my_text_layout">

                <TextView
                    android:id="@+id/textView3"
                    style="@style/my_text_style"
                    android:text="头像" />

                <RelativeLayout
                    android:id="@+id/completion_data_header"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:src="@drawable/icon_user_heder_gray" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/icon_arrow_right" />
                </RelativeLayout>
            </LinearLayout>

            <View style="@style/horizontal_view" />

            <LinearLayout style="@style/my_text_layout">

                <TextView
                    style="@style/my_text_style"
                    android:text="用户类别" />

                <TextView
                    style="@style/my_right_text_style1"
                    android:text="水电工" />
            </LinearLayout>

            <View style="@style/horizontal_view" />

            <LinearLayout style="@style/my_text_layout">

                <TextView
                    style="@style/my_text_style"
                    android:text="性别" />

                <TextView
                    style="@style/my_right_text_style1"
                    android:text="男" />
            </LinearLayout>

            <View style="@style/horizontal_view" />

            <LinearLayout style="@style/my_text_layout">

                <TextView
                    style="@style/my_text_style"
                    android:text="年龄" />

                <TextView
                    style="@style/my_right_text_style1"
                    android:text="48" />
            </LinearLayout>

            <View style="@style/horizontal_view" />

            <LinearLayout style="@style/my_text_layout">

                <TextView
                    style="@style/my_text_style"
                    android:text="地区" />

                <TextView
                    style="@style/my_right_text_style1"
                    android:text="四川省 德阳市 旌阳区" />
            </LinearLayout>

            <View style="@style/horizontal_view" />

            <LinearLayout style="@style/my_text_layout">

                <TextView
                    style="@style/my_text_style"
                    android:text="电话" />

                <TextView
                    style="@style/my_right_text_style1"
                    android:text="138888888" />
            </LinearLayout>

            <View style="@style/horizontal_view" />

            <LinearLayout style="@style/my_text_layout">

                <TextView
                    style="@style/my_text_style"
                    android:text="认证状态" />

                <TextView
                    style="@style/my_right_text_style"
                    android:gravity="right|center_vertical"
                    android:text="已认证" />
            </LinearLayout>

            <View style="@style/horizontal_view" />

            <LinearLayout style="@style/my_text_layout">

                <TextView
                    style="@style/my_text_style"
                    android:text="隶属关系" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7">

                    <include layout="@layout/activity_person_layout" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/icon_arrow_right" />
                </RelativeLayout>
            </LinearLayout>

            <View style="@style/horizontal_view" />

            <LinearLayout style="@style/my_text_layout">

                <TextView
                    style="@style/my_text_style"
                    android:text="个人介绍" />

                <TextView
                    style="@style/my_right_text_style1"
                    android:text="张明" />
            </LinearLayout>

            <View style="@style/horizontal_view" />

            <LinearLayout style="@style/my_text_layout">

                <TextView
                    style="@style/my_text_style"
                    android:text="粉丝" />

                <TextView
                    style="@style/my_right_text_style"
                    android:gravity="right|center_vertical"
                    android:text="0" />
            </LinearLayout>

            <View style="@style/horizontal_view" />

            <LinearLayout style="@style/my_text_layout">

                <TextView
                    style="@style/my_text_style"
                    android:text="关注" />

                <TextView
                    style="@style/my_right_text_style"
                    android:gravity="right|center_vertical"
                    android:text="0" />
            </LinearLayout>

            <View style="@style/horizontal_view" />

            <LinearLayout style="@style/my_text_layout">

                <TextView
                    style="@style/my_text_style"
                    android:text="任务" />

                <TextView
                    style="@style/my_right_text_style"
                    android:gravity="right|center_vertical"
                    android:text="0" />
            </LinearLayout>

            <View style="@style/horizontal_view" />

            <LinearLayout style="@style/my_text_layout">

                <TextView
                    style="@style/my_text_style"
                    android:text="订单" />

                <TextView
                    style="@style/my_right_text_style"
                    android:gravity="right|center_vertical"
                    android:text="0" />
            </LinearLayout>

            <View style="@style/horizontal_view" />

            <LinearLayout style="@style/my_text_layout">

                <TextView
                    style="@style/my_text_style"
                    android:text="扫码返利" />

                <TextView
                    style="@style/my_right_text_style"
                    android:gravity="right|center_vertical"
                     />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>