<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bypass_account_manage_edit_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/activity_page_top" />

            <LinearLayout style="@style/my_text_layout">

                <TextView
                    style="@style/my_text_style"
                    android:text="手机号码" />

                <EditText
                    android:id="@+id/my_bypass_account_edit_phone"
                    style="@style/my_right_text_style1" />
            </LinearLayout>

            <View style="@style/horizontal_view" />

            <LinearLayout style="@style/my_text_layout">

                <TextView
                    style="@style/my_text_style"
                    android:text="真实姓名" />

                <EditText
                    android:id="@+id/my_bypass_account_edit_name"
                    style="@style/my_right_text_style1" />
            </LinearLayout>

            <View style="@style/horizontal_view" />

            <LinearLayout style="@style/my_text_layout">

                <TextView
                    style="@style/my_text_style"
                    android:text="用户类型" />

                <TextView
                    android:id="@+id/my_bypass_account_edit_type"
                    style="@style/my_right_text_style1"
                    android:text="总经销 子账号"
                    android:textColor="@color/text_color" />
            </LinearLayout>

            <View style="@style/horizontal_view" />

            <LinearLayout style="@style/my_text_layout">

                <TextView
                    style="@style/my_text_style"
                    android:text="性别" />

                <TextView
                    android:id="@+id/my_bypass_account_edit_sex"
                    style="@style/my_right_text_style1" />
            </LinearLayout>

            <View style="@style/horizontal_view" />

            <LinearLayout style="@style/my_text_layout">

                <TextView
                    style="@style/my_text_style"
                    android:text="生日" />

                <TextView
                    android:id="@+id/my_bypass_account_edit_birthday"
                    style="@style/my_right_text_style1" />
            </LinearLayout>

            <View style="@style/horizontal_view" />

            <LinearLayout style="@style/my_text_layout">

                <TextView
                    style="@style/my_text_style"
                    android:text="登录密码" />

                <EditText
                    android:id="@+id/my_bypass_account_edit_pwd"
                    style="@style/my_right_text_style1"
                    />
            </LinearLayout>

            <View style="@style/horizontal_view" />

            <LinearLayout style="@style/my_text_layout">

                <TextView
                    style="@style/my_text_style"
                    android:text="职务显示" />

                <EditText
                    android:id="@+id/my_bypass_account_edit_JobTitle"
                    style="@style/my_right_text_style1" />
            </LinearLayout>

            <View style="@style/horizontal_view" />

            <LinearLayout style="@style/my_text_layout">

                <TextView
                    style="@style/my_text_style"
                    android:text="头像" />

                <RelativeLayout
                    android:id="@+id/my_bypass_account_edit_head"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7">

                    <ImageView
                        android:id="@+id/my_bypass_account_edit_head_iv"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:src="@drawable/icon_user_heder_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="8dp"
                        android:text="修改"
                        android:textColor="@color/black" />
                </RelativeLayout>


            </LinearLayout>

            <View style="@style/horizontal_view" />

            <LinearLayout style="@style/my_text_layout">

                <TextView
                    style="@style/my_text_style"
                    android:text="授权功能" />

                <TextView
                    android:id="@+id/authorization_functions"
                    style="@style/my_right_text_style" />
            </LinearLayout>

            <View style="@style/horizontal_view" />

            <Button
                android:id="@+id/my_bypass_account_edit_save"
                style="@style/style_next_btn"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_bg_blue"
                android:text="保存" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>


